    "@changesets/types": "^5.2.1",
    "@storybook/addon-a11y": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-storysource": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@storybook/theming": "^6.5.10",
    "@swc-node/jest": "^1.5.5",
    "@swc/core": "^1.3.24",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^28.1.6",
